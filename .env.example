# Environment variable template.
# Duplicate this file to .env.local (gitignored) and fill values.

# Core application
NEXT_PUBLIC_APP_NAME=NeoChyrp
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Supabase (used for auth + object storage optional + realtime)
# Public keys (exposed to browser)
NEXT_PUBLIC_SUPABASE_URL=YOUR_SUPABASE_PROJECT_URL
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_PUBLIC_KEY
# Service-role (keep private; do not expose to client)
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY

# Database (Prisma uses this; Supabase exposes a Postgres connection string)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/neochyrp?schema=public

# NextAuth (if using next-auth for session layer)
NEXTAUTH_SECRET=changeme_dev_secret
NEXTAUTH_URL=http://localhost:3000

# Security / misc
ENCRYPTION_KEY=32_byte_key_for_future_encryption_pad_it
JWT_SIGNING_KEY=dev-jwt-signing-key-change
