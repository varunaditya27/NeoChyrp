# Environment variable template.
# Duplicate this file to .env (gitignored) and fill values.

# Core application
NEXT_PUBLIC_APP_NAME=NeoChyrp
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Supabase (auth, storage, realtime)
# Public keys (safe in browser; RLS must be enabled!)
NEXT_PUBLIC_SUPABASE_URL=YOUR_SUPABASE_PROJECT_URL
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_PUBLIC_KEY
# Service-role (NEVER expose to client code)
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY


# Database (Prisma best practice: use pooler for DATABASE_URL, direct for migrations)
# Use connection pooling for Prisma client (runtime)
DATABASE_URL="postgresql://postgres.YOUR_PROJECT_REF:YOUR_PASSWORD@YOUR_POOL_HOST:6543/postgres?pgbouncer=true"
# Use direct connection for migrations (Prisma will use this automatically)
DIRECT_URL="postgresql://postgres:YOUR_PASSWORD@YOUR_DB_HOST:5432/postgres"

# NextAuth (if enabled)
NEXTAUTH_SECRET=changeme_dev_secret
NEXTAUTH_URL=http://localhost:3000

# Security / misc (replace in production)
ENCRYPTION_KEY=32_byte_key_for_future_encryption_pad_it
JWT_SIGNING_KEY=dev-jwt-signing-key-change
